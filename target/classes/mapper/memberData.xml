<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.MemberDao">


	<!-- 맴버 추가 -->
	<insert id="insertMember" parameterType="neo.common.data.DataMap">
		insert into member( MEMBER_ID, NAME, SEX , AGE , POSITION_ID )
		values(MEMBER_SEQ.nextval, #{name}, #{sex}, #{age}, #{position})
	</insert>


	<!-- 맴버 전체조회 -->
	<select id="findAllMember" resultType="neo.common.data.DataMap">
		select * from member
	</select>
	
	
	<!-- 맴버 Id 조회 -->
	<select id="getMemberById" parameterType="int" resultType="neo.common.data.DataMap">
		select * from member where MEMBER_ID = #{id}
	</select>
	
	<!-- 맴버 업데이트 -->
	<update id="updateMember" parameterType="neo.common.data.DataMap">
		update MEMBER set NAME = #{name} , SEX = #{sex}, AGE = #{age} , POSITION_ID = #{position} where MEMBER_ID = #{memberId}
	</update>
	
	<!-- 맴버 삭제 -->
	<delete id="deleteMember" parameterType="int">
		delete from MEMBER where MEMBER_ID = #{memberId}
	</delete>
	
	<!-- 직책 리스트 가져오기 -->
	<select id="getPositionList" resultType="neo.common.data.DataMap">
		select * from POSITIONMANAGER order by position_id
	</select>
	
</mapper>